@model List<ResultAppUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>City</th>
            <th>Country</th>
            <th>Department</th>
            <th>Status</th>
            <th>Gender</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {


            <tr>
                <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt=""></td>
                <td>@item.Name @item.Surname</td>
                <td>@item.City</td>
                <td><span>@item.Country</span></td>
                @*<td>@item.WorkDepartment</td>*@
                @if (item.Gender == "Male")
                {
                    <td>
                        <div>
                            <div class="progress" style="height: 6px">
                                <div class="progress-bar bg-success" style="width: 90%"></div>
                            </div>
                        </div>
                    </td>
                }
                @if (item.Gender == "Female")
                {
                    <td>
                        <div>
                            <div class="progress" style="height: 6px">
                                <div class="progress-bar bg-warning" style="width: 90%"></div>
                            </div>
                        </div>
                    </td>
                }
                @if (item.Gender == "Male")
                {
                    <td><i class="fa fa-circle-o text-success  mr-2"></i> @item.Gender</td>
                }
                @if (item.Gender == "Female")
                {
                    <td><i class="fa fa-circle-o text-warning  mr-2"></i> @item.Gender</td>
                }


            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Register/Index/" class="btn btn-primary">New User</a>


