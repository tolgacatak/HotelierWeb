@model CreateRoomDto
@{
    ViewData["Title"] = "AddRoom";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post" asp-action="AddRoom" asp-controller="AdminRoom">
    <label>Room Number</label>
    <input type="text" asp-for="RoomNumber" class="form-control" />
    <br />
    <label>Room Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Price</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <label>Count of Bed</label>
    <input type="text" asp-for="BedCount" class="form-control" />
    <br />
    <label>Count of Bath</label>
    <input type="text" asp-for="BathCount" class="form-control" />
    <br />
    <label>Wi-fi</label>
    <input type="text" asp-for="Wifi" class="form-control" />
    <br />
    <label>Room Cover Image</label>
    <input type="text" asp-for="RoomCoverimage" class="form-control" />
    <br />
    <label>Description</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <button class="btn btn-primary">Add a Room</button>
</form>

