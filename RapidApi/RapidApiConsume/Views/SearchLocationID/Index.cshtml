@model List<BookingApiLocationSearchViewModel>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    @using (Html.BeginForm("Index", "SearchLocationID", FormMethod.Post))
    {
        <label>Enter City Name</label>
        <input type="text" class="form-control" name="cityName" />
        <br />
        <button class="btn btn-primary">Find ID for City</button>
    }
    <table class="table table-bordered">
        <tr>
            
            <th>Location</th>
            
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.dest_id</td>
            </tr>
        }
    </table>
    <br />
    <a href="/BookingByCity/Index/" class="btn btn-dark">Information of New Hotel Reservation</a>
</div>